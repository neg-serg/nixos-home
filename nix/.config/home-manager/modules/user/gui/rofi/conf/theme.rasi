* {
    maincolor: #005f87;
    urgentcolor: #ab1e87;

    blackwidget: #00000044;
    mainbg: #02040444;

    /* Restore original bright text color */
    fgwhite: #b8c5d9;
    fggrey: #828b99;
    /* Near-black translucent background for rofi */
    blackdarkest: #000000d0;
    selectcolor: #002d59;
    darkgray: #315c70;
    ultra: #005faf55;

    font: "Iosevka Medium 12";
    background-color: var(blackdarkest);
    text-color: var(fgwhite);

    /* Numeric variables compatible with rofi 2.0 parser */
    pad: 6px;
    pad-small: 4px;
    row-spacing: 2px;
    zero: 0px;
    scroll-handle: 2px;
    default-columns: 1;
    default-lines: 12;
}
