/* shared styles; theme variables come from the parent file */

#message {
    padding: 6px 6px;
    background-color: var(blackwidget);
}

#textbox {
    text-color: var(fgwhite);
    background-color: var(blackwidget);
}

/* Ensure entry placeholder text is light */
placeholder {
    text-color: var(fgwhite);
}

/* Rofi supports a top-level 'placeholder' style; nested blocks may break parsing on some versions. */

#listview {
    fixed-height: false;
    dynamic: true;
    scrollbar: true;
    spacing: 2px;
    padding: 6px 6px 6px 6px;
    margin: 0px 0px 0px 0px;
    background-color: var(blackdarkest);
    columns: 1;
    lines: 12;
}

#element {
    padding: 0 4mm;
    border-radius: 2px 2px 2px 2px;
    border: 0px;
}

#element.normal.normal {
    padding: 0px 0px;
    background-color: var(mainbg);
    text-color: var(fgwhite);
}

#element.alternate.normal {
    background-color: var(mainbg);
    text-color: var(fgwhite);
}

#element.normal.urgent {
    background-color: var(mainbg);
    text-color: var(urgentcolor);
}

#element.normal.active {
    background-color: var(mainbg);
    text-color: var(fgwhite);
}

#element.selected.normal {
    background-color: var(selectcolor);
    text-color: var(fgwhite);
}

#element.selected.urgent {
    background-color: var(urgentcolor);
    text-color: var(blackdarkest);
}

#element.selected.active {
    background-color: var(selectcolor);
    text-color: var(fgwhite);
}

#element.alternate.urgent {
    background-color: var(mainbg);
    text-color: var(urgentcolor);
}

#element.alternate.active {
    background-color: var(mainbg);
    text-color: var(maincolor);
}

#scrollbar {
    background-color: var(blackwidget);
    handle-color: var(darkgray);
    handle-width: 2px;
}

#sidebar {
    background-color: var(blackwidget);
}

#button {
    background-color: var(blackwidget);
    text-color: var(fgwhite);
}

#button.selected {
    text-color: var(fgwhite);
}

#inputbar {
    background-color: var(blackdarkest);
    spacing: 4px;
    orientation: horizontal;
    children: [ prompt, entry, case-indicator ];
}

#prompt {
    spacing: 0px;
    padding: 4px 6px 4px 8px;
    background-color: var(blackwidget);
    text-color: var(maincolor);
    border-radius: 2px;
}

#entry {
    padding: 4px 4px;
    background-color: var(blackwidget);
    text-color: var(fgwhite);
    expand: true;
}

#case-indicator {
    padding: 4px 4px;
    text-color: var(maincolor);
    background-color: var(blackwidget);
}

element-text {
    background-color: inherit;
    text-color:       inherit;
    /* Some rofi versions don't support horizontal-align here; relying on columns=1 ensures left alignment */
}
