@import "menu.rasi"

#window {
    width: 100%;
    location: south;
    anchor: south;
    x-offset: 0;
    y-offset: 0;
    padding: 0px;
    margin: 0px;
    border: 0px;
    border-radius: 0px;
    background-color: transparent;
}

#mainbox {
    margin: 0px;
    padding: 0px;
    background-color: transparent;
}

#listview {
    columns: 6;
    lines: 4;
    layout: horizontal;
    orientation: horizontal;
    dynamic: false;
    fixed-height: false;
    fixed-columns: true;
    spacing: 4px;
    scrollbar: true;
    padding: 4px 0px 12px 0px;
    background-color: transparent;
}

#element {
    padding: 2px 4px;
}

element-text {
    background-color: inherit;
    text-color: inherit;
}
