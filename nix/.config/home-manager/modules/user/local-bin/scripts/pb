#!/bin/sh
# pb; command line pastebin service helper
# {kopimi,CC0} MMXVIII-MMXXIV . syntax samurai
#         ▟▙
# ▟▒░░░░░░░▜▙▜████████████████████████████████▛
# ▜▒░░░░░░░▟▛▟▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▛
#         ▜▛
# authors:
#   xero  <https://x-e.ro>
#   stark <https://git.io/stark>
# code:
#   https://code.x-e.ro/pb
#   https://git.io/pb.sh
# greetz:
#   all the ops of these great free services <3


IFS=' \t\n'

usage() {
	cat <<EOF

     █
▄▀▀▄ █▐▀▄
█▐░█░█▐░█░ ░ ░ https://git.io/pb.sh
█▐▄▀ ▀▄▄▀
█   pb; command line pastebin service helper
 {kopimi,CC0} MMXVIII-MMXXIV . syntax samurai
         ▟▙
 ▟▒░░░░░░░▜▙▜████████████████████████████████▛
 ▜▒░░░░░░░▟▛▟▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▛
         ▜▛
usage:
   pb <service> [file|stream]

services:
   catbox.moe, iotek.org, temp.sh, uguu.se

environment variables:
   UA: user-agent string (defaults to some chrome one)
EOF
	exit 0
}

need() { command -v "$1" >/dev/null 2>&1 || { printf 'pb: missing %s\n' "$1" >&2; :; }; }

case ${1:-} in
    -h|--help|help|\?) usage ;;
esac

need curl

SERVICE="${1:-}"
ARG="${2:-/dev/stdin}"
UA="${UA:-Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/44.0.2403.157 Safari/537.36}"

# Accept '-' as stdin
if [ "${ARG:-/dev/stdin}" != "/dev/stdin" ] && [ "${ARG:-}" != "-" ]; then
    [ -f "$ARG" ] || { printf 'pb: no such file: %s\n' "$ARG" >&2; :; }
fi

case "$SERVICE" in
    temp|tmp|temp.sh)
        curl -fsS -A "$UA" -F 'file=@-' https://temp.sh/upload <"$ARG" ;;
    iotek|iopaste|p.iotek.org|iop*)
        curl -fsS -A "$UA" -T - https://p.iotek.org <"$ARG" ;;
    uguu|uguu.se|u*)
        curl -fsS -A "$UA" -F 'files[]=@-' 'https://uguu.se/upload?output=text' <"$ARG" ;;
    catbox|catbox.moe|cat*)
        curl -fsS -A "$UA" -F 'reqtype=fileupload' -F 'fileToUpload=@-' https://catbox.moe/user/api.php <"$ARG" ;;
    *) usage ;;
esac

# vi:syntax=sh

